{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "declaration": true, // 每个包都需要生成 .d.ts 类型文件
    "sourceMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@at/db": ["packages/db/src"],
      "@at/chain": ["packages/chain/src"]
    }
  }
}
